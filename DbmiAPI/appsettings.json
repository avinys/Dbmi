{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://localhost:5000"
            },
            "Https": {
                "Url": "https://localhost:5001"
            }
        }
    },
    "Jwt": {
        "Key": "<set-via-user-secrets-or-env>",
        "Issuer": "BdmiAPI",
        "Audience": "BdmiClient",
        "AccessTokenLifetimeMinutes": 30,
        "RefreshTokenLifetimeDays": 7
    }
}
